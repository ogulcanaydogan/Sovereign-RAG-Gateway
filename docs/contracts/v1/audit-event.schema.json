{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sovereign-rag-gateway.dev/contracts/v1/audit-event.schema.json",
  "title": "AuditEventV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "request_id",
    "tenant_id",
    "user_id",
    "endpoint",
    "requested_model",
    "selected_model",
    "provider",
    "policy_decision",
    "policy_decision_id",
    "policy_evaluated_at",
    "policy_allow",
    "policy_mode",
    "transforms_applied",
    "redaction_count",
    "request_payload_hash",
    "redacted_payload_hash",
    "provider_request_hash",
    "provider_response_hash",
    "retrieval_citations",
    "streaming",
    "tokens_in",
    "tokens_out",
    "cost_usd",
    "policy_hash",
    "payload_hash",
    "prev_hash",
    "created_at"
  ],
  "properties": {
    "event_id": {"type": "string"},
    "request_id": {"type": "string"},
    "tenant_id": {"type": "string"},
    "user_id": {"type": "string"},
    "endpoint": {"type": "string"},
    "requested_model": {"type": "string"},
    "selected_model": {"type": "string"},
    "provider": {"type": "string"},
    "policy_decision": {
      "type": "string",
      "enum": ["allow", "deny", "transform", "observe"]
    },
    "policy_decision_id": {"type": "string"},
    "policy_evaluated_at": {
      "type": "string",
      "format": "date-time"
    },
    "policy_allow": {"type": "boolean"},
    "policy_mode": {
      "type": "string",
      "enum": ["enforce", "observe"]
    },
    "deny_reason": {"type": "string"},
    "transforms_applied": {
      "type": "array",
      "items": {"type": "string"}
    },
    "redaction_count": {
      "type": "integer",
      "minimum": 0
    },
    "request_payload_hash": {"type": "string"},
    "redacted_payload_hash": {"type": "string"},
    "provider_request_hash": {
      "type": ["string", "null"]
    },
    "provider_response_hash": {
      "type": ["string", "null"]
    },
    "retrieval_citations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["source_id", "connector", "uri", "chunk_id", "score"],
        "properties": {
          "source_id": {"type": "string"},
          "connector": {"type": "string"},
          "uri": {"type": "string"},
          "chunk_id": {"type": "string"},
          "score": {"type": "number"}
        }
      }
    },
    "streaming": {"type": "boolean"},
    "tokens_in": {
      "type": "integer",
      "minimum": 0
    },
    "tokens_out": {
      "type": "integer",
      "minimum": 0
    },
    "cost_usd": {
      "type": "number",
      "minimum": 0
    },
    "policy_hash": {"type": "string"},
    "provider_constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowed_providers": {
          "type": "array",
          "items": {"type": "string"}
        },
        "allowed_models": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "connector_constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "allowed_connectors": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "provider_attempts": {
      "type": "integer",
      "minimum": 1
    },
    "fallback_chain": {
      "type": "array",
      "items": {"type": "string"}
    },
    "payload_hash": {"type": "string"},
    "prev_hash": {"type": "string"},
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
