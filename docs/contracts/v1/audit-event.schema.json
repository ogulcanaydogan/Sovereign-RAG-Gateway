{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sovereign-rag-gateway.dev/contracts/v1/audit-event.schema.json",
  "title": "AuditEventV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "request_id",
    "tenant_id",
    "user_id",
    "endpoint",
    "requested_model",
    "selected_model",
    "provider",
    "policy_decision",
    "transforms_applied",
    "redaction_count",
    "tokens_in",
    "tokens_out",
    "cost_usd",
    "policy_hash",
    "payload_hash",
    "prev_hash",
    "created_at"
  ],
  "properties": {
    "event_id": {"type": "string"},
    "request_id": {"type": "string"},
    "tenant_id": {"type": "string"},
    "user_id": {"type": "string"},
    "endpoint": {"type": "string"},
    "requested_model": {"type": "string"},
    "selected_model": {"type": "string"},
    "provider": {"type": "string"},
    "policy_decision": {
      "type": "string",
      "enum": ["allow", "deny", "transform", "observe"]
    },
    "deny_reason": {"type": "string"},
    "transforms_applied": {
      "type": "array",
      "items": {"type": "string"}
    },
    "redaction_count": {
      "type": "integer",
      "minimum": 0
    },
    "tokens_in": {
      "type": "integer",
      "minimum": 0
    },
    "tokens_out": {
      "type": "integer",
      "minimum": 0
    },
    "cost_usd": {
      "type": "number",
      "minimum": 0
    },
    "policy_hash": {"type": "string"},
    "payload_hash": {"type": "string"},
    "prev_hash": {"type": "string"},
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
