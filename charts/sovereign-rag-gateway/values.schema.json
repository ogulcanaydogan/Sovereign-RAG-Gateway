{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "image",
    "serviceAccount",
    "service",
    "resources",
    "env",
    "probes",
    "networkPolicy"
  ],
  "properties": {
    "replicaCount": { "type": "integer", "minimum": 1 },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "required": ["repository", "tag", "pullPolicy"],
      "properties": {
        "repository": { "type": "string", "minLength": 1 },
        "tag": { "type": "string", "minLength": 1 },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "nameOverride": { "type": "string" },
    "fullnameOverride": { "type": "string" },
    "serviceAccount": {
      "type": "object",
      "additionalProperties": false,
      "required": ["create", "annotations", "name"],
      "properties": {
        "create": { "type": "boolean" },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "name": { "type": "string" }
      }
    },
    "rbac": {
      "type": "object",
      "additionalProperties": false,
      "required": ["create"],
      "properties": {
        "create": { "type": "boolean" }
      }
    },
    "podAnnotations": { "type": "object", "additionalProperties": { "type": "string" } },
    "podLabels": { "type": "object", "additionalProperties": { "type": "string" } },
    "podSecurityContext": {
      "type": "object",
      "additionalProperties": false,
      "required": ["runAsNonRoot", "runAsUser", "runAsGroup", "fsGroup"],
      "properties": {
        "runAsNonRoot": { "type": "boolean" },
        "runAsUser": { "type": "integer", "minimum": 1 },
        "runAsGroup": { "type": "integer", "minimum": 1 },
        "fsGroup": { "type": "integer", "minimum": 1 }
      }
    },
    "securityContext": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowPrivilegeEscalation", "readOnlyRootFilesystem", "capabilities"],
      "properties": {
        "allowPrivilegeEscalation": { "type": "boolean" },
        "readOnlyRootFilesystem": { "type": "boolean" },
        "capabilities": {
          "type": "object",
          "additionalProperties": false,
          "required": ["drop"],
          "properties": {
            "drop": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "port", "targetPort"],
      "properties": {
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"] },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "targetPort": { "type": "integer", "minimum": 1, "maximum": 65535 }
      }
    },
    "resources": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requests", "limits"],
      "properties": {
        "requests": {
          "type": "object",
          "additionalProperties": false,
          "required": ["cpu", "memory"],
          "properties": {
            "cpu": { "type": "string", "minLength": 1 },
            "memory": { "type": "string", "minLength": 1 }
          }
        },
        "limits": {
          "type": "object",
          "additionalProperties": false,
          "required": ["cpu", "memory"],
          "properties": {
            "cpu": { "type": "string", "minLength": 1 },
            "memory": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled", "minReplicas", "maxReplicas", "targetCPUUtilizationPercentage"],
      "properties": {
        "enabled": { "type": "boolean" },
        "minReplicas": { "type": "integer", "minimum": 1 },
        "maxReplicas": { "type": "integer", "minimum": 1 },
        "targetCPUUtilizationPercentage": { "type": "integer", "minimum": 1, "maximum": 100 }
      }
    },
    "env": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "apiKeys",
        "env",
        "defaultModel",
        "modelCatalog",
        "providerName",
        "opaMode",
        "redactionEnabled",
        "ragEnabled",
        "ragAllowedConnectors",
        "logLevel",
        "auditLogPath",
        "metricsEnabled",
        "providerFallbackEnabled",
        "budgetEnabled",
        "budgetDefaultCeiling",
        "budgetWindowSeconds",
        "budgetTenantCeilings",
        "budgetBackend",
        "budgetRedisUrl",
        "budgetRedisPrefix",
        "budgetRedisTtlSeconds",
        "webhookEnabled",
        "webhookEndpoints",
        "webhookTimeoutS",
        "webhookMaxRetries",
        "webhookBackoffBaseS",
        "webhookBackoffMaxS",
        "webhookDeadLetterBackend",
        "webhookDeadLetterPath",
        "webhookDeadLetterRetentionDays",
        "tracingEnabled",
        "tracingMaxTraces",
        "tracingOtlpEnabled",
        "tracingOtlpEndpoint",
        "tracingOtlpTimeoutS",
        "tracingOtlpHeaders",
        "tracingServiceName"
      ],
      "properties": {
        "apiKeys": { "type": "array", "items": { "type": "string", "minLength": 1 }, "minItems": 1 },
        "env": { "type": "string", "minLength": 1 },
        "defaultModel": { "type": "string", "minLength": 1 },
        "modelCatalog": { "type": "string", "minLength": 1 },
        "providerName": { "type": "string", "minLength": 1 },
        "opaMode": { "type": "string", "enum": ["enforce", "observe"] },
        "redactionEnabled": { "type": "boolean" },
        "ragEnabled": { "type": "boolean" },
        "ragAllowedConnectors": { "type": "string", "minLength": 1 },
        "logLevel": { "type": "string", "minLength": 1 },
        "auditLogPath": { "type": "string", "minLength": 1 },
        "metricsEnabled": { "type": "boolean" },
        "providerFallbackEnabled": { "type": "boolean" },
        "budgetEnabled": { "type": "boolean" },
        "budgetDefaultCeiling": { "type": "integer", "minimum": 1 },
        "budgetWindowSeconds": { "type": "integer", "minimum": 1 },
        "budgetTenantCeilings": { "type": "string" },
        "budgetBackend": { "type": "string", "enum": ["memory", "redis"] },
        "budgetRedisUrl": { "type": "string" },
        "budgetRedisPrefix": { "type": "string", "minLength": 1 },
        "budgetRedisTtlSeconds": { "type": "integer", "minimum": 1 },
        "webhookEnabled": { "type": "boolean" },
        "webhookEndpoints": { "type": "string" },
        "webhookTimeoutS": { "type": "number", "minimum": 0.1 },
        "webhookMaxRetries": { "type": "integer", "minimum": 0 },
        "webhookBackoffBaseS": { "type": "number", "minimum": 0.0 },
        "webhookBackoffMaxS": { "type": "number", "minimum": 0.0 },
        "webhookDeadLetterBackend": { "type": "string", "enum": ["jsonl", "sqlite"] },
        "webhookDeadLetterPath": { "type": "string" },
        "webhookDeadLetterRetentionDays": { "type": "integer", "minimum": 0 },
        "tracingEnabled": { "type": "boolean" },
        "tracingMaxTraces": { "type": "integer", "minimum": 1 },
        "tracingOtlpEnabled": { "type": "boolean" },
        "tracingOtlpEndpoint": { "type": "string" },
        "tracingOtlpTimeoutS": { "type": "number", "minimum": 0.1 },
        "tracingOtlpHeaders": { "type": "string" },
        "tracingServiceName": { "type": "string", "minLength": 1 }
      }
    },
    "probes": {
      "type": "object",
      "additionalProperties": false,
      "required": ["liveness", "readiness"],
      "properties": {
        "liveness": { "$ref": "#/$defs/probe" },
        "readiness": { "$ref": "#/$defs/probe" }
      }
    },
    "networkPolicy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["enabled", "allowIngressFromSameNamespace", "allowDNS", "extraEgressCIDRs"],
      "properties": {
        "enabled": { "type": "boolean" },
        "allowIngressFromSameNamespace": { "type": "boolean" },
        "allowDNS": { "type": "boolean" },
        "extraEgressCIDRs": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[0-9./]+$" }
        }
      }
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "tolerations": {
      "type": "array",
      "items": { "type": "object" }
    },
    "affinity": {
      "type": "object"
    }
  },
  "$defs": {
    "probe": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "initialDelaySeconds", "periodSeconds", "timeoutSeconds"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 },
        "timeoutSeconds": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
